<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tasks Form View -->
    <record id="view_execution_planning_task_form" model="ir.ui.view">
        <field name="name">execution.planning.task.form</field>
        <field name="model">execution.planning.task</field>
        <field name="arch" type="xml">
            <form string="Planning Task">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Task Name"/></h1>
                    </div>
                    <group>
                        <group string="Task Details">
                            <field name="lot_id"/>
                            <field name="planning_id" invisible="1"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Schedule">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration"/>
                            <field name="weight"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tasks List View -->
    <record id="view_execution_planning_task_tree" model="ir.ui.view">
        <field name="name">execution.planning.task.tree</field>
        <field name="model">execution.planning.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="lot_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="duration"/>
                <field name="weight"/>
            </list>
        </field>
    </record>

</odoo>
