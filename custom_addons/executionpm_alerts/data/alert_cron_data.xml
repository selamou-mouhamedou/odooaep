<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="cron_check_task_delays" model="ir.cron">
        <field name="name">Execution Alerts: Check Task Delays</field>
        <field name="model_id" search="[('model', '=', 'execution.alert')]"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_task_delays()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 06:00:00')"/>
    </record>

