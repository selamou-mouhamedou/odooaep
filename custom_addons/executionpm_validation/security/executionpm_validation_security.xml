<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Validation records are readable by all users but only created by validators -->
    <record id="rule_execution_validation_read_all" model="ir.rule">
        <field name="name">Validation: Read All</field>
        <field name="model_id" ref="model_execution_validation"/>
        <field name="groups" eval="[(4, ref('executionpm_core.group_executionpm_base'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Only validators can create validation records (via actions) -->
    <record id="rule_execution_validation_create_validator" model="ir.rule">
        <field name="name">Validation: Create by Validators</field>
        <field name="model_id" ref="model_execution_validation"/>
        <field name="groups" eval="[(4, ref('executionpm_core.group_executionpm_pmo'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Ensure validators cannot modify their own validated declarations -->
    <!-- (Separation of concerns: validators validate, they don't declare) -->
    <record id="rule_progress_validator_no_own_declare" model="ir.rule">
        <field name="name">Validator: Cannot validate own declarations</field>
        <field name="model_id" ref="executionpm_execution.model_execution_progress"/>
        <field name="groups" eval="[(4, ref('executionpm_core.group_executionpm_pmo'))]"/>
        <field name="domain_force">['|', ('create_uid', '!=', user.id), ('state', '=', 'draft')]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>


</odoo>
