<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_execution_validation_wizard_form" model="ir.ui.view">
        <field name="name">execution.validation.wizard.form</field>
        <field name="model">execution.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="Validation Action">
                <group>
                    <field name="progress_id" readonly="1"/>
                    <field name="action_type" readonly="1"/>
                </group>
                <group string="Reason / Comment">
                    <field name="comment" nolabel="1" 
                           placeholder="Enter the reason for rejection or details of required corrections. This is mandatory and will be visible to the contractor."/>
                </group>
                <footer>
                    <button name="action_confirm" 
                            string="Confirm" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
