<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Sequence -->
    <record id="sequence_execution_progress" model="ir.sequence">
        <field name="name">Execution Progress Declaration</field>
        <field name="code">execution.progress</field>
        <field name="prefix">PROG/</field>
        <field name="padding">5</field>
    </record>

    <!-- Search View -->
    <record id="view_execution_progress_search" model="ir.ui.view">
        <field name="name">execution.progress.search</field>
        <field name="model">execution.progress</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="task_id"/>
                <field name="project_id"/>
                <separator/>
                <filter string="My Declarations" name="my_declarations" domain="[('create_uid', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Under Review" name="under_review" domain="[('state', '=', 'under_review')]"/>
                <filter string="Validated" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="To Review" name="to_review" domain="[('state', 'in', ['submitted', 'under_review'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Task" name="group_task" context="{'group_by': 'task_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Execution Date" name="group_date" context="{'group_by': 'execution_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- List View -->
    <record id="view_execution_progress_list" model="ir.ui.view">
        <field name="name">execution.progress.list</field>
        <field name="model">execution.progress</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" 
                  decoration-warning="state == 'submitted'"
                  decoration-primary="state == 'under_review'"
                  decoration-success="state == 'validated'" 
                  decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="task_id"/>
                <field name="project_id" optional="show"/>
                <field name="execution_date"/>
                <field name="previous_percentage"/>
                <field name="declared_percentage"/>
                <field name="incremental_percentage"/>
                <field name="attachment_count" string="Proofs"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'submitted'"
                       decoration-primary="state == 'under_review'"
                       decoration-success="state == 'validated'"
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_execution_progress_form" model="ir.ui.view">
        <field name="name">execution.progress.form</field>
        <field name="model">execution.progress</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Contractor Actions -->
                    <button name="action_submit" 
                            string="Submit for Review" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    
                    <!-- Reviewer Actions -->
                    <button name="action_start_review" 
                            string="Start Review" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'submitted'"
                            groups="executionpm_core.group_executionpm_pmo"/>
                            
                    <button name="action_validate" 
                            string="Validate" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'under_review'"
                            groups="executionpm_core.group_executionpm_pmo"/>
                            
                    <button name="action_reject" 
                            string="Reject" 
                            type="object" 
                            class="btn-danger"
                            invisible="state not in ('submitted', 'under_review')"
                            groups="executionpm_core.group_executionpm_pmo"/>
                            
                    <button name="action_reset_draft" 
                            string="Reset to Draft" 
                            type="object" 
                            invisible="state not in ('rejected', 'submitted')"/>
                            
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,under_review,validated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-paperclip">
                            <field name="attachment_count" string="Proofs" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    
                    <!-- Rejection Alert -->
                    <div class="alert alert-danger" name="rejection_alert" role="alert" 
                         invisible="not rejection_reason or state != 'rejected'">
                        <strong>Rejected: </strong> <field name="rejection_reason" readonly="1"/>
                    </div>
                    
                    <group>
                        <group string="Task Information">
                            <field name="task_id" readonly="state != 'draft'"/>
                            <field name="planning_id"/>
                            <field name="project_id"/>
                        </group>
                        <group string="Progress Data">
                            <field name="execution_date" readonly="state not in ('draft', 'rejected')"/>
                            <field name="previous_percentage"/>
                            <field name="declared_percentage" readonly="state not in ('draft', 'rejected')"/>
                            <field name="incremental_percentage"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Quantity" name="group_quantity">
                            <field name="quantity_executed" readonly="state not in ('draft', 'rejected')"/>
                            <field name="quantity_unit" readonly="state not in ('draft', 'rejected')"/>
                        </group>
                        <group string="Validation" name="group_validation" invisible="state not in ('validated', 'rejected')">
                            <field name="validated_by"/>
                            <field name="validated_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="comment" placeholder="Describe the work executed..." 
                                   readonly="state not in ('draft', 'rejected')"/>
                        </page>
                        <page string="Proof Attachments">
                            <field name="attachment_ids" widget="many2many_binary" 
                                   readonly="state not in ('draft', 'rejected')"/>
                            <p class="text-muted" invisible="state != 'draft'">
                                <i class="fa fa-info-circle"/> At least one proof attachment is required before submission.
                            </p>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_execution_progress_kanban" model="ir.ui.view">
        <field name="name">execution.progress.kanban</field>
        <field name="model">execution.progress</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="task_id"/>
                <field name="declared_percentage"/>
                <field name="execution_date"/>
                <field name="state"/>
                <field name="attachment_count"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_title">
                                <strong><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="task_id"/>
                            </div>
                            <div class="mt-2">
                                <span class="badge bg-primary">
                                    <field name="declared_percentage"/>%
                                </span>
                                <span class="ms-2 text-muted">
                                    <i class="fa fa-calendar"/> <field name="execution_date"/>
                                </span>
                            </div>
                            <div class="mt-1" t-if="record.attachment_count.raw_value > 0">
                                <span class="text-muted">
                                    <i class="fa fa-paperclip"/> <field name="attachment_count"/> attachments
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_execution_progress" model="ir.actions.act_window">
        <field name="name">Progress Declarations</field>
        <field name="res_model">execution.progress</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_to_review': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Progress Declaration
            </p>
            <p>
                Contractors submit their progress declarations here.<br/>
                Each declaration requires proof attachments and goes through a validation workflow.
            </p>
        </field>
    </record>

    <record id="action_execution_progress_all" model="ir.actions.act_window">
        <field name="name">All Declarations</field>
        <field name="res_model">execution.progress</field>
        <field name="view_mode">list,kanban,form</field>
    </record>


</odoo>
