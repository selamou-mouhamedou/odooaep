<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_execution_project_state_wizard_form" model="ir.ui.view">
        <field name="name">execution.project.state.wizard.form</field>
        <field name="model">execution.project.state.wizard</field>
        <field name="arch" type="xml">
            <form string="Project State Change">
                <group>
                    <field name="project_id" readonly="1"/>
                    <field name="new_state" readonly="1"/>
                    <field name="reason" placeholder="Enter the reason for this state change..."/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
