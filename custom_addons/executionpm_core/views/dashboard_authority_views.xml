<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Authority Actions -->
    <record id="action_authority_total_projects" model="ir.actions.act_window">
        <field name="name">Total Portfolio</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_execution_project', '=', True)]</field>
        <field name="context">{'default_is_execution_project': True}</field>
        <field name="search_view_id" ref="view_execution_project_search"/>
    </record>

    <record id="action_authority_at_risk" model="ir.actions.act_window">
        <field name="name">Projects At Risk</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[
            ('is_execution_project', '=', True), 
            ('execution_state', '=', 'at_risk')
        ]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_execution_project_search"/>
    </record>

    <record id="action_authority_avg_delay_graph" model="ir.actions.act_window">
        <field name="name">Portfolio Delay Analysis (Days)</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('is_execution_project', '=', True)]</field>
        <field name="context">{'graph_mode': 'bar', 'graph_measure': 'execution_delay_days'}</field>
        <field name="search_view_id" ref="view_execution_project_search"/>
    </record>

    <record id="action_authority_execution_rate_graph" model="ir.actions.act_window">
        <field name="name">Global Execution Rate (%)</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('is_execution_project', '=', True)]</field>
        <field name="context">{'graph_mode': 'pie', 'graph_measure': 'execution_progress'}</field>
        <field name="search_view_id" ref="view_execution_project_search"/>
    </record>

    <!-- Authority Dashboard -->
    <record id="board_authority_dashboard" model="ir.ui.view">
        <field name="name">board.authority.dashboard</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Management Control Center">
                <board style="1-1">
                    <column>
                        <action name="%(action_authority_total_projects)d" string="Total Infrastructure Portfolio"/>
                        <action name="%(action_authority_avg_delay_graph)d" string="Delay Tracking by Project"/>
                    </column>
                    <column>
                        <action name="%(action_authority_at_risk)d" string="Critical Risks (At Risk)"/>
                        <action name="%(action_authority_execution_rate_graph)d" string="Global Physical Progress Rate"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="action_dashboard_authority" model="ir.actions.act_window">
        <field name="name">Authority Overview</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_authority_dashboard"/>
    </record>

    <menuitem id="menu_dashboard_authority_final"
              name="Authority / Management"
              parent="executionpm_core.menu_executionpm_dashboard_root"
              action="action_dashboard_authority"
              sequence="10"
              groups="executionpm_core.group_executionpm_authority"/>

</odoo>
