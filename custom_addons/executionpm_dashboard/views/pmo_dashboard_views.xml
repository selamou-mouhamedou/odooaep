<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Specific Actions for PMO Dashboard -->
    <record id="action_critical_alerts_dashboard" model="ir.actions.act_window">
        <field name="name">Critical Alerts</field>
        <field name="res_model">execution.alert</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('severity', 'in', ('critical', 'high')), ('state', '=', 'new')]</field>
        <field name="context">{'search_default_severity_critical': 1}</field>
    </record>

    <record id="action_pending_validations_dashboard" model="ir.actions.act_window">
        <field name="name">Pending Validations</field>
        <field name="res_model">execution.progress</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', 'in', ('submitted', 'under_review'))]</field>
    </record>

    <record id="action_delayed_tasks_dashboard" model="ir.actions.act_window">
        <field name="name">Delayed Tasks</field>
        <field name="res_model">execution.planning.task</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('date_end', '&lt;', context_today().strftime('%Y-%m-%d')), ('progress_status', '!=', 'completed')]</field>
    </record>

    <!-- PMO Dashboard View -->
    <record id="board_pmo_dashboard" model="ir.ui.view">
        <field name="name">board.pmo.dashboard</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="PMO Dashboard">
                <board style="1-2">
                    <column>
                         <action name="%(action_critical_alerts_dashboard)d" string="Critical Alerts"/>
                    </column>
                    <column>
                        <action name="%(action_pending_validations_dashboard)d" string="Pending Validations"/>
                         <action name="%(action_delayed_tasks_dashboard)d" string="Delayed Tasks"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!-- PMO Dashboard Action -->
    <record id="action_pmo_dashboard" model="ir.actions.act_window">
        <field name="name">PMO Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_pmo_dashboard"/>
    </record>

    <menuitem id="menu_dashboard_pmo"
              name="PMO Monitoring"
              parent="menu_executionpm_dashboard_root"
              action="action_pmo_dashboard"
              sequence="20"
              groups="executionpm_core.group_executionpm_pmo,executionpm_core.group_executionpm_pmo"/>

</odoo>
