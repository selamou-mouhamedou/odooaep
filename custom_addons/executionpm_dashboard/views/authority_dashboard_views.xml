<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Specific Actions for Authority Dashboard -->
    <record id="action_project_status_overview_dashboard" model="ir.actions.act_window">
        <field name="name">Project Status Overview</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('is_execution_project', '=', True)]</field>
        <field name="context">{'graph_mode': 'pie'}</field>
    </record>

    <record id="action_investment_by_sector_dashboard" model="ir.actions.act_window">
        <field name="name">Investment by Sector</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('is_execution_project', '=', True)]</field>
        <field name="context">{'graph_mode': 'bar', 'graph_measure': 'execution_budget'}</field>
    </record>

    <record id="action_projects_at_risk_dashboard" model="ir.actions.act_window">
        <field name="name">Projects At Risk</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_execution_project', '=', True), ('execution_state', '=', 'at_risk')]</field>
        <field name="context">{'default_execution_state': 'at_risk'}</field>
    </record>

    <!-- Authority Dashboard View -->
    <record id="board_authority_dashboard" model="ir.ui.view">
        <field name="name">board.authority.dashboard</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Authority Dashboard">
                <board style="2-1">
                    <column>
                        <action name="%(action_project_status_overview_dashboard)d" string="Project Status Overview"/>
                        <action name="%(action_investment_by_sector_dashboard)d" string="Investment by Sector"/>
                    </column>
                    <column>
                         <action name="%(action_projects_at_risk_dashboard)d" string="Projects At Risk"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!-- Authority Dashboard Action -->
    <record id="action_authority_dashboard" model="ir.actions.act_window">
        <field name="name">Authority Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_authority_dashboard"/>
    </record>

    <!-- Menu Item (Visible to Managers/Admins) -->
    <menuitem id="menu_executionpm_dashboard_root"
              name="Dashboards"
              parent="executionpm_core.menu_executionpm_root"
              sequence="5"/>

    <menuitem id="menu_dashboard_authority"
              name="Authority Overview"
              parent="menu_executionpm_dashboard_root"
              action="action_authority_dashboard"
              sequence="10"
              groups="executionpm_core.group_executionpm_pmo"/>

</odoo>
