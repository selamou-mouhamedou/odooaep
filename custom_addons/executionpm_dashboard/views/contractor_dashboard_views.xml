<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Specific Actions for Contractor Dashboard -->
    <record id="action_my_tasks_dashboard" model="ir.actions.act_window">
        <field name="name">My Tasks</field>
        <field name="res_model">execution.planning.task</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('planning_id.project_id.execution_contractor_id.related_user_id', '=', uid)]</field>
    </record>

    <record id="action_upcoming_deadlines_dashboard" model="ir.actions.act_window">
        <field name="name">Upcoming Deadlines (7 Days)</field>
        <field name="res_model">execution.planning.task</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('planning_id.project_id.execution_contractor_id.related_user_id', '=', uid), ('date_end', '&lt;=', (context_today() + relativedelta(days=7)).strftime('%Y-%m-%d')), ('progress_status', '!=', 'completed')]</field>
    </record>

    <record id="action_rejected_progress_dashboard" model="ir.actions.act_window">
        <field name="name">Rejected / Corrections Needed</field>
        <field name="res_model">execution.progress</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('create_uid', '=', uid), ('state', 'in', ('rejected', 'correction_requested'))]</field>
    </record>

    <!-- Contractor Dashboard View -->
    <record id="board_contractor_dashboard" model="ir.ui.view">
        <field name="name">board.contractor.dashboard</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Contractor Dashboard">
                <board style="2-1">
                    <column>
                         <action name="%(action_my_tasks_dashboard)d" string="My Tasks"/>
                         <action name="%(action_upcoming_deadlines_dashboard)d" string="Upcoming Deadlines (7 Days)"/>
                    </column>
                    <column>
                         <action name="%(action_rejected_progress_dashboard)d" string="Rejected / Corrections Needed"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!-- Contractor Dashboard Action -->
    <record id="action_contractor_dashboard" model="ir.actions.act_window">
        <field name="name">Contractor Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_contractor_dashboard"/>
    </record>

    <menuitem id="menu_dashboard_contractor"
              name="Contractor Hub"
              parent="menu_executionpm_dashboard_root"
              action="action_contractor_dashboard"
              sequence="30"
              groups="executionpm_core.group_executionpm_base"/>

</odoo>
